{
  "name": "Moore",
  "version": "1.0.0",
  "description": "An open-source, general purpose discord bot with a lot of commands and utilities",
  "main": "src/index.js",
  "scripts": {
    "start": "cd dist && node src/index",
    "format": "prettier -w .",
    "lint": "eslint . --no-error-on-unmatched-pattern",
    "build": "pnpm run build:files && pnpm run copy:dotfiles",
    "build:files": "tsc -p .",
    "build:watch": "tsc -p . --watch",
    "copy:dotfiles": "cp .env dist"
  },
  "keywords": [],
  "author": "Mulforma",
  "license": "Apache-2.0",
  "dependencies": {
    "@sapphire/framework": "^3.1.3",
    "@types/node": "^18.11.3",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "discord.js": "13.10",
    "eslint": "^8.26.0",
    "typescript": "^4.8.4"
  }
}
